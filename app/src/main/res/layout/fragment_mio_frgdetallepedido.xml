        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/mio_varstrdetallepedido10"
        android:textColor="@color/blackPrimary"
        android:textSize="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/mio_varstrdetallepedido11"
        android:textColor="@color/blackPrimary"
        android:textSize="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/mio_varstrdetallepedido12"
        android:textColor="@color/blackPrimary"
        android:textSize="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/mio_varstrdetallepedido13"
        android:textColor="@color/blackPrimary"
        android:textSize="10dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/mio_varstrdetallepedido14"
        android:textColor="@color/blackPrimary"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/mio_dpedtdireccionentrega"
        android:background="@drawable/containedbutton_white"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Calle las Gardenias 1705" />

    <Button
        android:id="@+id/mio_dpbtndetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VER PRODUCTOS"
        android:layout_margin="15dp"
        android:background="@drawable/outline_textinputedittext"
        >

    </Button>
</LinearLayout>